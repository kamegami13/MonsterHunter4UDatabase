<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/melody_listitem"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                style="@style/list_item"
                android:paddingTop="0dp">


    <ImageView
        android:id="@+id/horn_note1"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/impact"
        style="@style/tiny_image"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:paddingTop="0dp"/>

    <ImageView
        android:id="@+id/horn_note2"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/impact"
        style="@style/tiny_image"
        android:layout_toRightOf="@+id/horn_note1"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/horn_note3"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/impact"
        style="@style/tiny_image"
        android:layout_toRightOf="@+id/horn_note2"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:id="@+id/horn_note4"
        android:layout_gravity="center_vertical"
        tools:src="@drawable/impact"
        style="@style/tiny_image"
        android:layout_toRightOf="@+id/horn_note3"
        android:layout_marginRight="4dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="DUR: 180(240)"
        android:textIsSelectable="false"
        android:textSize="12sp"
        android:layout_toLeftOf="@+id/extension"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="right"/>

    <TextView
        android:id="@+id/extension"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="EXT: +120(+180)"
        android:textIsSelectable="false"
        android:textSize="12sp"
        android:gravity="right"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/duration"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/effect1"
        style="@style/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        tools:text="Movement Speed Up"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignParentTop="false"
        android:textSize="12sp"
        android:layout_below="@+id/horn_note1"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/effect2"
        style="@style/text_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Attack Deflection"
        android:layout_below="@+id/effect1"
        android:textSize="12sp"/>

</RelativeLayout>