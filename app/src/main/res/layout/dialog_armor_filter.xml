<?xml version="1.0" encoding="utf-8"?>

<TableLayout
    android:id="@+id/filter_container_rank"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TableRow android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/filter_checkbox_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"/>

        <TextView
            android:id="@+id/filter_label_rank"
            style="@style/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/armor_filter_label_rank"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/filter_spinner_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

    <TableRow
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/filter_checkbox_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/filter_label_slots"
            style="@style/text_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/armor_filter_label_slots"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/filter_spinner_slots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/filter_spinner_slots_spec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </TableRow>

</TableLayout>