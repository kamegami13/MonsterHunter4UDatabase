<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:id="@+id/armor_builder_helmet"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:paddingTop="3dp"
                  android:paddingBottom="3dp">
        <ImageView android:id="@+id/armor_builder_item_icon"
                   android:layout_height="match_parent"
                   android:layout_width="wrap_content"/>
        <TextView android:id="@+id/armor_builder_item_name"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:textSize="20sp"
                  android:textIsSelectable="false"/>
    </LinearLayout>

    <LinearLayout android:id="@+id/armor_builder_body"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:paddingTop="3dp"
                  android:paddingBottom="3dp">
        <ImageView android:id="@id/armor_builder_item_icon"
                   android:layout_height="match_parent"
                   android:layout_width="wrap_content"/>
        <TextView android:id="@id/armor_builder_item_name"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:textSize="20sp"
                />
    </LinearLayout>

    <LinearLayout android:id="@+id/armor_builder_arms"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:paddingTop="3dp"
                  android:paddingBottom="3dp">
        <ImageView android:id="@id/armor_builder_item_icon"
                   android:layout_height="match_parent"
                   android:layout_width="wrap_content"/>
        <TextView android:id="@id/armor_builder_item_name"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:textSize="20sp"
                />
    </LinearLayout>

    <LinearLayout android:id="@+id/armor_builder_waist"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:paddingTop="3dp"
                  android:paddingBottom="3dp">
        <ImageView android:id="@id/armor_builder_item_icon"
                   android:layout_height="match_parent"
                   android:layout_width="wrap_content"/>
        <TextView android:id="@id/armor_builder_item_name"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:textSize="20sp"
                />
    </LinearLayout>

    <LinearLayout android:id="@+id/armor_builder_legs"
                  android:orientation="horizontal"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:paddingTop="3dp"
                  android:paddingBottom="3dp">
        <ImageView android:id="@id/armor_builder_item_icon"
                   android:layout_height="match_parent"
                   android:layout_width="wrap_content"/>
        <TextView android:id="@id/armor_builder_item_name"
                  android:layout_height="wrap_content"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:textSize="20sp"
                />
    </LinearLayout>

</LinearLayout>