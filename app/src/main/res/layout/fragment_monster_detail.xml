<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/detail_monster_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="10dp"
                android:contentDescription="@string/monster_image" />

            <TextView
                android:id="@+id/detail_monster_label"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="@string/placeholder_unknown"
                android:textColor="@color/text_color"
                android:textSize="20sp" />

        </LinearLayout>

<!--         <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/subheading_color"
            android:padding="10dp">

            <TextView
                android:id="@+id/impact_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginTop="3dp"
                android:text="Area"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/cut"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />

            <ImageView
                android:id="@+id/impact"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />

            <ImageView
                android:id="@+id/shot"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />

            <ImageView
                android:id="@+id/ko"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/weapon_damage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >
        </TableLayout>

<!--         <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" /> -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@color/subheading_color"
            android:padding="10dp">

            <TextView
                android:id="@+id/element_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginTop="3dp"
                android:text="Area"
                android:textColor="@color/text_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/fire"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />

            <ImageView
                android:id="@+id/water"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />

            <ImageView
                android:id="@+id/ice"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />

            <ImageView
                android:id="@+id/thunder"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />

            <ImageView
                android:id="@+id/dragon"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="0.1"
                android:contentDescription="@string/monster_image" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/elemental_damage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp" >
        </TableLayout>
    </LinearLayout>

</ScrollView>